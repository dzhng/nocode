{
  "name": "nocode-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "start": "npm start --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "test:dev": "npm run test:dev --workspaces",
    "lint": "npm run lint --workspaces",
    "deploy:all": "npm run build && firebase deploy --only firestore,storage,database,hosting,functions",
    "deploy:store": "npm run build && firebase deploy --only firestore,storage,database,hosting",
    "deploy:functions": "npm run build && firebase deploy --only functions",
    "firebase:indexes": "firebase firestore:indexes",
    "firebase:logs": "firebase functions:log"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.1.8",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.21",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-ts-auto-mock": "^2.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "react-scripts": "^4.0.1",
    "react-test-renderer": "^17.0.1",
    "ts-auto-mock": "^3.3.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.1.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3",
    "webpack": "^5.28.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --no-ignore --fix"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}

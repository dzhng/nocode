{
  "hosting": {
    "public": "modules/app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": {
    "source": "modules/firebase",
    "runtime": "nodejs14"
  },
  "firestore": {
    "rules": "modules/firebase/rules/firestore.rules",
    "indexes": "modules/firebase/rules/firestore.indexes.json"
  },
  "storage": {
    "rules": "modules/firebase/rules/storage.rules"
  },
  "database": {
    "rules": "modules/firebase/rules/database.rules.json"
  }
}
